<Application x:Class="OnScreenPlayer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OnScreenPlayer"
             xmlns:tb="http://www.hardcodet.net/taskbar">
    <Application.Resources>
        <ResourceDictionary>
            <tb:TaskbarIcon x:Key="MyNotifyIcon"
                            IconSource="pack://application:,,,/Assets/icon.ico"
                            ToolTipText="OnScreen Player">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu x:Name="NotifyIconContextMenu">
                        <MenuItem Header="Переключить режим всех окон" Click="ToggleModeForAll_Click"/> 
                        <MenuItem Header="Изменить текущий GIF" Click="ChangeCurrentGif_Click"/> 
                        <Separator/>
                        <MenuItem Header="Клонировать активное окно" Click="CloneActiveWindow_Click"/> 
                        <MenuItem Header="Добавить новое GIF-окно" Click="AddNewGifWindow_Click"/>
                        <Separator/>
                        <MenuItem Header="Выход" Click="Exit_Click"/>
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
        </ResourceDictionary>
    </Application.Resources>
</Application>
