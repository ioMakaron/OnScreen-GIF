<Window x:Class="OnScreenPlayer.StandardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="Window" Height="324" Width="324"
        AllowsTransparency="False"
        Background="{DynamicResource {x:Static SystemColors.ControlBrush}}"
        WindowStyle="SingleBorderWindow"
        Topmost="True"
        ShowInTaskbar="False"
        KeyDown="Window_KeyDown">

    <Grid>
        <Image x:Name="AnimatedImage" gif:ImageBehavior.AnimatedSource="{Binding ImageSource}" Stretch="Uniform"/>
    </Grid>
</Window>
